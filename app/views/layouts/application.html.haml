%html
  %head
    %title Project X
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light
      %div.container
        = link_to "Home", root_path, class: "navbar-brand"
        %ul.navbar-nav.nounderline
          %li.nav-item
            = link_to "Courses", courses_path, class: 'nav-link'
          - if current_user.nil?
            %li.nav-item
              = link_to "Log In", user_facebook_omniauth_authorize_path, class: 'nav-link'
          - else
            %li.nav-item
              = link_to "Logout", destroy_user_session_path, method: :delete, class: 'nav-link'
    - if notice
      %p.alert.alert-success
        = notice
    - if alert
      %p.alert.alert-danger
        = alert
    %div.container.mainpage
      %div.text-center
        %button.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown"}
          = t('.language')
        %ul.dropdown-menu
          %li
            = link_to t('.ukraine'), url_for(:locale => :ua), class: 'dropdown-item'
          %li
            = link_to t('.english'), url_for(:locale => :en), class: 'dropdown-item'

      = yield
